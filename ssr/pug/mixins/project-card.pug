mixin project-card(name, authority, releaseDate, image, description, concepts, techStack, projectLink, gitLinks)
  .project-card.h-100
    .d-flex.justify-content-between
      .left-container
        a.project-name.mb-0.pf-secondary(href=projectLink target="_blank" rel="noopener")=name
      .links-container.d-flex.justify-content-end.align-items-center
        if projectLink
          a.project-link(href=projectLink target="_blank" rel="noopener" title="See live")
            i.fas.fa-external-link-alt
        if gitLinks
          each gitLink in gitLinks
            a.project-link.ml-3(href=gitLink target="_blank" rel="noopener" title="See repository")
              i.fab.fa-github
    p.pf-muted-bright=authority
    .img-container.position-relative
      img.img-fluid.project-image(src=image)
      a.image-overlay(href=projectLink target="_blank" rel="noopener")
    //- .col-12.mt-4
    //-   p.mb-1.font-weight-bold.pf-secondary Concepts
    //-   ul.pl-3
    //-     each concept in concepts
    //-       li.pf-muted-faded=concept
    .mt-4.mb-4
      p.pf-muted-bright=description
    .tech-stack-container.d-flex.justify-content-between.align-items-center.mt-3.pt-3
      .inner-container
        each tech, index in techStack
          .tech-item.mr-2.mb-1=tech
      
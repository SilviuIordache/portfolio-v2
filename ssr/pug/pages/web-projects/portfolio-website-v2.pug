extends ../../templates/project-details.pug 
include ../../mixins/project-image.pug
include ../../mixins/project-links-mixin.pug

block project-content
  .row.project-section
    .col-12.col-md-6.mb-5
      .d-flex.justify-content-between
        p.project-details-title Portfolio website v2
        +project-links-mixin('/', ['https://github.com/SilviuIordache/portfolio-v2'])
    
      p.pf-muted-bright.mb-2 side project

      .tech-item Pug
      .tech-item Stylus
      .tech-item Bootstrap
      .tech-item Stylus
      .tech-item Javascript
      .tech-item GitHub
      .tech-item Netlify
        
      p.pf-white.mt-4 The second iteration of my portfolio website. After creating my first portfolio website, I wanted to improve the design and look in order to give it a more professional look. The result is this very website you are reading the description on.

      a.filled-cta(href='/' target="_blank" rel="noopener") See live

    .col-12.col-md-6
      +project-image('/assets/web-projects/portfolio2/portfoliov2.png', 'Website screenshot')

  .row.project-section
    .col-12.col-md-6.mb-5
      +project-image('/assets/web-projects/portfolio2/portfolio-project-details.png', 'A detailed project page')

    .col-12.col-md-6.mb-5
      h3.project-heading Features
      ul.pf-muted-faded.pl-3
        li pug mixin templates
        li hamburger navbar menu
        li project sub-pages
        li dynamic navbar highlight with scroll
        li dark theme
        li smooth element animations
        li responsive website design
        li custom scrollbar
        //- li dynamic scroll to top arrow

  .row.project-section
    .col-12
      h3.project-heading Screenshots

    .col-12.col-md-6.col-xl-4.mb-5
      +project-image('/assets/web-projects/portfolio2/portfoliov2.png', 'Website screenshot')
    .col-12.col-md-6.col-xl-4.mb-5
      +project-image('/assets/web-projects/portfolio2/portfolio-project-details.png', 'A detailed project page')
    .col-12.col-md-6.col-xl-4.mb-5
      +project-image('/assets/web-projects/portfolio2/pf-photo-zoom.png', 'Clicking an image to enlarge it')
    .col-12.col-md-6.col-xl-4.mb-5
      +project-image('/assets/web-projects/portfolio2/pf-hamburger.png', 'Navbar transforming in hamburger on smaller devices')
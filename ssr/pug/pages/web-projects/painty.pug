extends ../../templates/project-details.pug 
include ../../mixins/project-image.pug
include ../../mixins/project-links-mixin.pug
include ../../mixins/link-mixin.pug

block project-content
  .row.project-section
    .col-12.col-md-6.mb-5
      .d-flex.justify-content-between
        p.project-details-title Art Social Media
        +project-links-mixin(
          'https://painty-production.web.app/',
          ['https://github.com/SilviuIordache/painty'])
      p.project-coordinator Freelancing
      .tech-item ReactJS
      .tech-item ReactRouter
      .tech-item React Hooks
      .tech-item MaterialUI
      .tech-item Canvas API
      .tech-item HotJar
        
      p.pf-white.mt-4 Codename Painty is social media drawing app that challenges players to draw a word under 30 seconds. Users can share and like the community drawings.
      a.filled-cta(href='https://painty-production.web.app/' target="_blank" rel="noopener") See live

    .col-12.col-md-6
      +project-image('/assets/web-projects/painty/gallery.png', 'A view of the drawing gallery')

  .row.project-section
    .col-12.col-md-6.mb-5
      +project-image('/assets/web-projects/painty/drawing-1.png', 'A drawing made inside the paint editor')

    .col-12.col-md-6.mb-5
      h3.project-heading Features
      ul.pf-muted-faded.pl-3
        li implementation of a drawing app using the CanvasAPI
        li user auth system: register, login, recover password
        li a news-feed of community drawings
        li ability to Like a drawing
        li multiple game modes: challenge mode and practice mode
        li multiple drawing tools: brush with 3 sizes, eraser, bucket-filling tool
        li responsive application design that looks great on any screen size, including mobile
        li Hotjar integration for capturing user behavior and gathering user feedback
        li toast message system for user action feedback
        li option to SAVE, DELETE and DOWNLOAD images
    

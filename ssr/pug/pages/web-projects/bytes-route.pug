extends ../../templates/project-details.pug 
include ../../mixins/project-image.pug
include ../../mixins/project-links-mixin.pug
include ../../mixins/link-mixin.pug

block project-content
  .row.project-section
    .col-12.col-md-6.mb-5
      .d-flex.justify-content-between
        p.project-details-title Bytes Route
        +project-links-mixin(
          'https://www.bytesroute.com/')
      p.project-coordinator Caphyon
      .tech-item Vue.js
      .tech-item VueRouter
      .tech-item VueX
      .tech-item Pug
      .tech-item Stylus
      .tech-item Bootstrap
      .tech-item Node.js
      .tech-item Express
      .tech-item MongoDB
      .tech-item Mongoose
      .tech-item Vue-Test-Utils
      .tech-item Jest
      .tech-item GitLab
      .tech-item Heroku

      .pf-white.mt-4
        p Bytes Route is a free SaaS for building and deploying product tours for websites and web-applications, without any coding background. 
        
        p The app consists of 5 sub-projects: a website, a Vue.js app, an Express API, a vanillaJS script and a Chrome extension used as the tour builder. More info on each project is found below.
      
      a.filled-cta(href='https://www.bytesroute.com/' target="_blank" rel="noopener") See live

    .col-12.col-md-6
      +project-image(
        '/assets/web-projects/bytesroute/brt-dashboard-1.png',
        'A view of the dashboard app',
        '1')

  .pf-white.project-section
    .row.sub-project
      .col-12.col-md-6.mb-3
        h5.pf-primary 1. Bytes Route website
        .tech-used
          .tech-item Pug
          .tech-item Stylus
          .tech-item Bootstrap
          .tech-item Heroku
        p.mb-0 A presentation website containing info about the product
        +link-mixin('https://www.bytesroute.com')

        p.sub-proj-features Features:
        ul
          li landing page #[a.link(href='https://www.bytesroute.com/') (link)]
          li how-it-works page #[a.link(href='https://www.bytesroute.com/how-to-use-bytes-route.html') (link)]
          li blog #[a.link(href='https://www.bytesroute.com/blog/') (link)]
          li docs #[a.link(href='https://www.bytesroute.com/docs/') (link)]
          li responsive website: mobile friendly, performant Lighthouse scores
      .col-12.col-md-6.mb-3
        +project-image('/assets/web-projects/bytesroute/brt-landing.png', 'Presentation page: landing page')
     
    .row.sub-project
      .col-12.col-md-6.mb-4.order-lg-2
        h5.pf-primary 2. Dashboard app
        .tech-used
          .tech-item Vue.js
          .tech-item Bootstrap
          .tech-item Node.js
          .tech-item Pug
          .tech-item Stylus
          .tech-item Heroku
        p.mb-0 An front-end app built with Vue.Js where users authenticate, manage created product tours, manage team members, customize tour styles, apply tour language, manage subscriptions and more.
        +link-mixin('https://www.bytesroute.com/app')
        p.sub-proj-features Features:
        ul
          li SOLID app architecture
          li auth forms: register, login, pass reset, pass recover
          li large-sized Vue.js app
          li used VueRouter for managing view changes
          li used VueX for better component state handling
          li tour analytics
      .col-12.col-md-6.mb-3
        +project-image('/assets/web-projects/bytesroute/brt-dashboard-2.png', 'The dashboard app')
      
    .row.sub-project
      .col-12.col-md-6.mb-4
        h5.pf-primary 3. Tour creator (Chrome extension)
        .tech-used
          .tech-item Vue.js
          .tech-item Pug
          .tech-item Stylus
          .tech-item Chrome API
          .tech-item JS
          .tech-item web-components
        p.mb-0 A Chrome extension that Bytes Route clients use to build, edit, and test tours for their websites. Contains an algorithm that searches for DOM elements and saves unique references to them.
        +link-mixin('https://chrome.google.com/webstore/detail/bytes-route-free-digital/kfdoklilbkbflmbmkinaojhdhkojlhbh?hl=en', 'Chrome extension store link')

        p.sub-proj-features Features
        ul
          li Chrome extension
          li Tour builder
          li DOM manipulation
          li element selector
      .col-12.col-md-6.mb-4
        +project-image('/assets/web-projects/bytesroute/brt-extension.png', 'BRT extension')
        

    .row.sub-project
      .col-12.col-md-6.mb-4.order-lg-2
        h5.pf-primary 4. Bytes Route backend
        .tech-used
          .tech-item NodeJS
          .tech-item Express
          .tech-item MongoDB
          .tech-item Mongoose
          .tech-item Mocha
          .tech-item Chai
          .tech-item Heroku
        p.mb-0 A RESTful API handling responsible for CRUD operations called  from the Dashboard app, the Chrome extension and the Script.

        p.sub-proj-features Features:
        ul
          li RESTful API
          li handling of multiple documents: users, tours, teams, styles, subscriptions, languages
          li unit tests using Mocha and Chai
      .col-12.col-md-6.mb-4
        +project-image('/assets/web-projects/bytesroute/node-express.png')

    .row.sub-project
      .col-12.col-md-6.mb-4
        h5.pf-primary 5. Bytes Route script
        .tech-used
          .tech-item ES6
          .tech-item Web Components
        p.mb-0 This script is responsible for the tour creation and tour running. Bytes Route users receive a script with a custom id that they can integrate in their apps to enable tours running on Bytes Route.
      .col-12.col-md-6.mb-4
        +project-image('/assets/web-projects/bytesroute/javascript-generic.jpeg')
    

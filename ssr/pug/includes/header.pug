mixin header(showNav)
  header#header.py-3.d-flex.justify-content-between.align-items-center
    .d-flex.align-items-center.ml-0.ml-md-4
      a#home-logo(href="/") S
    if showNav
      ul#header-items-container.my-ul.mr-4.mb-0.d-none.d-lg-block
        li.header-li
          a.header-item.active(href="#intro") INTRO
        li.header-li
          a.header-item(href="#about") ABOUT ME
        li.header-li
          a.header-item(href="#projects") PROJECTS
        li.header-li
          a.header-item(href="#contact") CONTACT
      #hamburger-container.d-block.d-lg-none
        svg#hamburger-trigger.mr-4(viewbox='0 0 100 80' width='40' height='40')
          rect(y='0'  width='100' height='10' rx='5')
          rect(y='30' width='100' height='10' rx='5')
          rect(y='60' width='100' height='10' rx='5' color='pink')
        #hamburger-menu
          a.ham-item(href="#intro") INTRO
          a.ham-item(href="#about") ABOUT ME
          a.ham-item(href="#projects") PROJECTS
          a.ham-item(href="#contact") CONTACT
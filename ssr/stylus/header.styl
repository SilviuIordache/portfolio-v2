header
  background-color #ededed

.header-li
  cursor pointer
  display inline
  padding-right 1.5rem
  
.header-item
  padding-bottom 0.3rem
  text-align center
  color $pf-primary
  cursor pointer
  display inline-block
  margin-left 0.5rem
  margin-right 0.5rem
  transition: all .4s ease-in-out
  border-bottom 0.2rem solid transparent
  &:hover
    text-decoration none
    color $pf-primary-bright

.active
  border-bottom 0.2rem solid $pf-primary-bright

#header-items-container
  border-bottom 0.05rem solid $pf-muted

.sticky-header
  position fixed
  top 0
  transition top 0.5s
  right 0
  left 0
  z-index 999

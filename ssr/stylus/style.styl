.container
  margin-bottom 3rem
  max-width 50rem

h1
  margin-bottom 4rem

.my-ul
  list-style none
  margin-bottom 0

.my-li
  cursor pointer
  display inline
  padding-right 1.5rem


.separator-line
  text-align center
  border-top 1px solid lightgray
  margin-bottom 5rem

.rounded-xl
  border-radius 7%


.footer-icon
  width 1rem
  color light-gray

// ---- about section
.hobby
 margin-bottom 2rem

.emoji
  font-size 2rem
  margin-bottom 0

// ----- Generic

.footer-link
  color gray

.project-card
  border-radius 0.5rem
  padding 2rem
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
.project-card-interactive
    transition: all .2s ease-in-out
    &:hover
      cursor pointer
      transform: scale(1.05);
    &:active
      background-color #f5f5f5
      transform: scale(0.95);

.project-image
  border-radius 1rem
  transition: all .4s ease-in-out
  filter opacity(70%)
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);
  &:hover
    cursor pointer
    filter: none
    transform: scale(1.1)

.project-link
  font-size 1.5rem
  color gray
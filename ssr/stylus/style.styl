#projects, #experience, #contact, #resume
  height 40rem

.container
  margin-bottom 3rem
  max-width 50rem

// ----- Generic
.project-card
  border-radius 0.5rem
  padding 2rem
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
.project-card-interactive
    transition: all .2s ease-in-out
    &:hover
      cursor pointer
      transform: scale(1.05);
    &:active
      background-color #f5f5f5
      transform: scale(0.95);

.project-image
  border-radius 1rem
  transition: all .4s ease-in-out
  filter opacity(70%)
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);
  &:hover
    cursor pointer
    filter: none
    transform: scale(1.1)

.project-link
  font-size 1.5rem
  color gray
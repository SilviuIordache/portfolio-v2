#about
  margin-top 10rem

.hello-message
  font-size 1rem

.big-name
  font-size 3rem
  color $pf-primary
  margin-bottom 0

.image-container
  &::after
    text-align center
    justify-content center
    display flex
    content: ''
    height 150%
    width 150%
    top 0
    bottom 0
    left 50%
    right -50%
    margin auto
    position absolute
    padding 2rem
    border-radius 50%
    border 1px dashed $pf-primary
    transition 0.5s
    transform translate(-50%, 0)
  &:hover
    .profile-picture
      filter grayscale(0%)
    &::after
      width 100%
      height 100%

.profile-picture
  border-radius 50%
  max-width 100%
  box-shadow 0 1rem 2rem rgba(0,0,0,.5)
  filter grayscale(50%)
  transition 0.5s
  &:hover
    filter grayscale(0%)
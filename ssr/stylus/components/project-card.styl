.project-card
  border-radius 0.7rem
  overflow hidden
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.4);
  min-width 10rem
  min-height 12rem
  transition: all .4s ease-in-out
  &:hover
    transform translateY(-3%)
  
  .project-inner-container
    width 100%
    &:hover
      text-decoration none
    &:hover .image-container
      filter grayscale(0%)

    .image-container
      z-index 9
      background-size 110%
      background-repeat no-repeat
      background-position center
      width 100%
      height 10rem
      filter grayscale(50%)
      transition: all .4s ease-in-out
      display block
    
    .bottom-container
      display block
      background-color $pf-muted-dark
      padding 1rem 1rem
      height 100%

      .project-title
        font-size 1.4rem
        font-weight 500
        color $pf-white
        margin-bottom 0rem
      
      .project-owner
        color $pf-primary
        margin-bottom 0.3rem

      .tech-container
        .card-tech
          color $pf-muted-bright
          font-size 0.8rem
          display inline
          margin-right 0.5rem
    
#carousel-outer-container
  display none
  z-index 1000
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color alpha($pf-dark, 0.9)

  #carousel-close
    text-align right
    padding 1rem
    font-size 4rem
    cursor pointer
    color $pf-white
    transition: all .4s ease-in-out

  #carousel-container
    overflow hidden
    border-radius 0.5rem
    position fixed
    left 50%
    top 50%
    transform translate(-50%,-50%)
    width 70vw
    height auto
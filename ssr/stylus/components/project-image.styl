.outer-image-container
  cursor pointer
  background-color $pf-white
  border-radius 0.5rem
  width 100%
  height 100%
  min-height 13rem
  max-height 20rem
  transition: all .4s ease-in-out
  &:hover
    transform scale(1.02)

  .project-image
    box-shadow 0 2px 4px 0 rgba(0,0,0,0.2)
    background-size 100%
    background-repeat no-repeat
    background-position center
    width 100%
    height 100%
    
.project-image-desc
  margin-top 0.3rem
  font-size 1rem
  font-style italic
  color $pf-muted-bright
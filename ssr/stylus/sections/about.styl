#about
  margin-top 14rem
@media (max-width: 768px)
  #about
    margin-top 10rem

.about-secondary
  font-size 1.5rem

.big-name
  font-size 3.5rem
  color $pf-white
  margin-bottom 0
@media (max-width: 768px)
  .big-name
    font-size 2.5rem


#profile-outer-container
  @media (min-width: 768px) and (max-width: 991.98px) {
    padding 3rem
  }
  @media (max-width 991.98px) {
    margin-top 2rem
    margin-bottom 2rem
  }
#profile-pic-container
  position relative

  #profile-pic-overlay
    box-shadow 0 1rem 2rem alpha($pf-dark, 0.8)
    border-radius 50%
    content:'';
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    display: block;
    position: absolute;
    background: alpha($pf-primary, 0.5)
    transition: all .4s ease-in-out
    &:hover
      background: alpha($pf-primary, 0)

  #profile-picture
    border-radius 50%
    max-width 100%
    transition 1.5s
    image-rendering pixelated

.tech-pill
  font-size 0.9rem
  color $pf-muted-bright
  padding 0.4rem 0.8rem
  border 1px solid $pf-muted-bright
  border-radius 1rem
  margin-right 0.5rem
  margin-bottom 0.5rem
  display inline-block
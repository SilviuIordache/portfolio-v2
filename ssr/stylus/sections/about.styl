#about
  margin-top 12rem

.tech-pill
  color $pf-secondary
  padding 0.5rem 1rem
  border 1px solid $pf-secondary
  border-radius 1rem
  margin-right 0.5rem
  margin-bottom 0.5rem
  display inline-block

.profile-picture
  border-radius 50%
  max-width 100%
  box-shadow 0 1rem 2rem alpha($pf-dark, 0.8)
  transition 1.5s
  image-rendering pixelated

.profile-pic-overlay
  cursor pointer
  border-radius 50%
  content:'';
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  background: alpha($pf-primary, 0.5)
  transition: all .4s ease-in-out
  &:hover
    background: alpha($pf-primary, 0)

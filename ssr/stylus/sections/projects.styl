@import './colors.styl'
#projects
  margin-top 14rem

.project-card
  background-color $pf-dark
  border-radius 1rem
  padding 2rem
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.4);

.project-name
  font-size 1.6rem
  font-weight 500
  transition: all .2s ease-in-out
  &:hover
    color $pf-muted-faded

.project-image
  border-radius 1rem
  transition all .4s ease-in-out
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.2)
  position relative
    
.image-overlay
  cursor pointer
  border-radius 1rem
  content ""
  display block
  width 100%
  height 100%
  background-color alpha($pf-primary-dark, 0.5)
  position absolute
  top 0
  left 0
  transition: all .4s ease-in-out
  &:hover
    background-color alpha($pf-primary-bright, 0)

.project-link
  font-size 1.5rem
  color $pf-muted-bright
  transition: all .2s ease-in-out
  &:hover
    color $pf-white
    transform translateY(-2%)

.tech-stack-container
  border-top 1px solid $pf-muted-bright

.tech-item
  font-size 0.8rem
  border 1px solid $pf-secondary
  border-radius 2rem
  padding 0.2rem 0.5rem
  color $pf-secondary
  display inline-block
  transition: all .2s ease-in-out
  &:hover
    background-color alpha($pf-white, 0.1)
    transform translateY(-6%)